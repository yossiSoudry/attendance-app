// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_PRISMA_DATABASE_URL")
}

// ========================================
// Organization (Multi-tenant) Enums
// ========================================

enum OrganizationStatus {
  ACTIVE
  SUSPENDED
  TRIAL
}

enum OrganizationPlan {
  FREE
  BASIC
  PREMIUM
  ENTERPRISE
}

// ========================================
// Platform Admin (System Owner)
// ========================================

model PlatformAdmin {
  id        String   @id @default(uuid()) @db.Uuid
  email     String   @unique
  password  String?  // hashed password (optional for Google-only auth)
  name      String
  googleId  String?  @unique // Google OAuth ID
  image     String?  // Profile image URL
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([email])
  @@index([googleId])
}

// ========================================
// Platform Settings (Global Configuration)
// ========================================

model PlatformSettings {
  id        String   @id @default("default")
  timezone  String   @default("Asia/Jerusalem") // IANA timezone
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// ========================================
// Organization (Company/Tenant)
// ========================================

model Organization {
  id          String             @id @default(uuid()) @db.Uuid
  name        String             // שם החברה
  email       String             @unique // אימייל ראשי
  legalName   String?            // שם משפטי לחשבוניות
  taxId       String?            // ח.פ. / מספר עוסק
  logoUrl     String?            // לוגו החברה
  status      OrganizationStatus @default(TRIAL)
  plan        OrganizationPlan   @default(FREE)

  // Trial/Subscription info
  trialEndsAt   DateTime?
  subscribedAt  DateTime?

  createdAt   DateTime           @default(now())
  updatedAt   DateTime           @updatedAt

  // Relations
  departments     Department[]
  admins          AdminUser[]
  invitations     AdminInvitation[]
  employees       Employee[]
  workTypes       WorkType[]
  workRules       OrganizationWorkRules?
  employeeBonuses EmployeeBonus[]
  tasks           Task[]
  documentRequests DocumentRequest[]
  employeeDocuments EmployeeDocument[]
  shifts          Shift[]
  timeEvents      TimeEvent[]
  devices         Device[]
  auditLogs       AuditLog[]
  leaveRequests   LeaveRequest[]
  casualWorkerEntries CasualWorkerEntry[]

  @@index([email])
  @@index([status])
}

// ========================================
// Existing Enums
// ========================================

enum EmployeeStatus {
  ACTIVE
  BLOCKED
}

enum ShiftStatus {
  OPEN
  CLOSED
  PENDING_APPROVAL
  CORRECTED
  REJECTED
}

enum TimeEventType {
  CLOCK_IN
  CLOCK_OUT
  CORRECTION_IN
  CORRECTION_OUT
}

enum ActorType {
  EMPLOYEE
  MANAGER
  SYSTEM
}

enum CalendarEventType {
  HOLIDAY
  FAST
  ROSH_CHODESH
  MEMORIAL
  CUSTOM
}

enum BonusType {
  HOURLY
  ONE_TIME
}

enum TaskStatus {
  OPEN
  COMPLETED
  POSTPONED
  CANCELED
}

enum Visibility {
  EMPLOYER_ONLY
  EMPLOYEE_CAN_SEE
}

enum UploadedBy {
  EMPLOYEE
  MANAGER
}

enum WorkTypeRateType {
  BASE_RATE       // שימוש בשכר הבסיסי של העובד
  FIXED           // תעריף קבוע לשעה
  BONUS_PERCENT   // תוספת אחוזים על השכר הבסיסי
  BONUS_FIXED     // תוספת קבועה לשעה
}

enum Platform {
  ANDROID
  IOS
}

enum AdminRole {
  OWNER      // סופר אדמין - יכול להוסיף מנהלים
  ADMIN      // מנהל רגיל - רואה את כל העובדים
  MANAGER    // מנהל מחלקה - רואה רק עובדים במחלקה שלו
}

enum AdminStatus {
  ACTIVE
  INACTIVE
}

// סוג העסקה
enum EmploymentType {
  HOURLY        // שעתי
  MONTHLY       // חודשי
  HR_CONTRACTOR // מנהל כוח אדם / קבלן
}

// סוג תשלום נסיעות
enum TravelAllowanceType {
  NONE      // ללא תשלום נסיעות
  DAILY     // לפי יום עבודה
  MONTHLY   // סכום חודשי קבוע
}

// סוג חופשה
enum LeaveType {
  VACATION  // חופשה
  SICK      // מחלה
}

// סטטוס בקשת חופשה
enum LeaveStatus {
  PENDING            // ממתין לאישור
  APPROVED           // אושר
  PARTIALLY_APPROVED // אושר חלקית
  REJECTED           // נדחה
}

model Department {
  id             String       @id @default(uuid()) @db.Uuid
  organizationId String       @db.Uuid
  name           String
  description    String?
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  admins       AdminUser[]
  employees    Employee[]

  @@unique([organizationId, name]) // שם מחלקה ייחודי בתוך ארגון
  @@index([organizationId])
}

model AdminUser {
  id             String       @id @default(uuid()) @db.Uuid
  organizationId String       @db.Uuid
  email          String       @unique
  password       String?      // hashed password - null if using OAuth only
  name           String
  role           AdminRole    @default(MANAGER)
  status         AdminStatus  @default(ACTIVE)
  departmentId   String?      @db.Uuid

  // OAuth fields
  googleId       String?      @unique
  image          String?

  // Invitation fields
  invitedById    String?      @db.Uuid
  invitedAt      DateTime?

  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  organization  Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  department    Department?  @relation(fields: [departmentId], references: [id])
  invitedBy     AdminUser?   @relation("AdminInvitations", fields: [invitedById], references: [id])
  invitees      AdminUser[]  @relation("AdminInvitations")

  // Shifts approved by this admin
  approvedShifts Shift[]    @relation("ApprovedShifts")

  // Leave requests approved/rejected by this admin
  approvedLeaveRequests LeaveRequest[] @relation("ApprovedLeaveRequests")

  @@index([organizationId])
  @@index([email])
  @@index([departmentId])
}

model AdminInvitation {
  id             String       @id @default(uuid()) @db.Uuid
  organizationId String       @db.Uuid
  email          String       @unique
  role           AdminRole    @default(MANAGER)
  departmentId   String?      @db.Uuid
  token          String       @unique
  expiresAt      DateTime
  invitedById    String       @db.Uuid
  createdAt      DateTime     @default(now())
  usedAt         DateTime?

  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@index([organizationId])
  @@index([token])
  @@index([email])
}

model Employee {
  id              String              @id @default(uuid()) @db.Uuid
  organizationId  String              @db.Uuid
  employeeNumber  Int                 @default(autoincrement())
  fullName        String
  nationalId      String
  status          EmployeeStatus      @default(ACTIVE)

  // Employment type and rates
  employmentType        EmploymentType      @default(HOURLY)
  baseHourlyRate        Int                 // stored in agorot (for hourly employees)
  monthlyRate           Int?                // stored in agorot (for monthly employees)
  workDaysPerWeek       Int                 @default(5)

  // Travel allowance
  travelAllowanceType   TravelAllowanceType @default(NONE)
  travelAllowanceAmount Int?                // stored in agorot

  requireLocation Boolean             @default(false)
  departmentId    String?             @db.Uuid
  createdAt       DateTime            @default(now())
  updatedAt       DateTime            @updatedAt

  organization     Organization       @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  department       Department?        @relation(fields: [departmentId], references: [id])
  workRates        EmployeeWorkRate[]
  shifts           Shift[]
  timeEvents       TimeEvent[]
  bonuses          EmployeeBonus[]
  tasks            Task[]
  documentRequests DocumentRequest[]
  documents        EmployeeDocument[]
  devices          Device[]
  leaveRequests    LeaveRequest[]

  // HR Contractor relations - רשומות עובדים מזדמנים
  casualWorkerEntries CasualWorkerEntry[] @relation("ContractorEntries")

  @@unique([organizationId, employeeNumber]) // מספר עובד ייחודי בתוך ארגון
  @@unique([organizationId, nationalId])     // ת.ז. ייחודית בתוך ארגון
  @@index([organizationId])
  @@index([departmentId])
  @@index([organizationId, status])
}

model WorkType {
  id             String             @id @default(uuid()) @db.Uuid
  organizationId String             @db.Uuid
  name           String
  description    String?
  isDefault      Boolean            @default(false)

  // Rate configuration
  rateType       WorkTypeRateType   @default(BASE_RATE)
  rateValue      Int                @default(0)  // agorot for FIXED/BONUS_FIXED, percent*100 for BONUS_PERCENT (e.g., 2500 = 25%)

  createdAt      DateTime           @default(now())
  updatedAt      DateTime           @updatedAt

  organization  Organization       @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  employeeRates EmployeeWorkRate[]
  shifts        Shift[]

  @@unique([organizationId, name]) // שם סוג עבודה ייחודי בתוך ארגון
  @@index([organizationId])
}

model EmployeeWorkRate {
  id         String   @id @default(uuid()) @db.Uuid
  employeeId String   @db.Uuid
  workTypeId String   @db.Uuid
  hourlyRate Int      // agorot
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  employee Employee @relation(fields: [employeeId], references: [id], onDelete: Cascade)
  workType WorkType @relation(fields: [workTypeId], references: [id], onDelete: Cascade)

  @@unique([employeeId, workTypeId])
}

model Shift {
  id             String        @id @default(uuid()) @db.Uuid
  organizationId String        @db.Uuid
  employeeId     String        @db.Uuid
  workTypeId     String?       @db.Uuid
  startTime      DateTime
  endTime        DateTime?
  status         ShiftStatus   @default(OPEN)
  source         String        @default("web") // "mobile" / "web" / "import"
  isManual       Boolean       @default(false)
  notesEmployee  String?
  notesManager   String?
  isRetro        Boolean       @default(false)
  approvedById   String?       @db.Uuid
  approvedAt     DateTime?
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt

  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  employee     Employee     @relation(fields: [employeeId], references: [id], onDelete: Cascade)
  workType     WorkType?    @relation(fields: [workTypeId], references: [id])
  approvedBy   AdminUser?   @relation("ApprovedShifts", fields: [approvedById], references: [id])
  timeEvents   TimeEvent[]

  @@index([organizationId])
  @@index([employeeId, startTime])
  @@index([organizationId, status])
  @@index([organizationId, status, startTime])
}

model TimeEvent {
  id             String        @id @default(uuid()) @db.Uuid
  organizationId String        @db.Uuid
  employeeId     String        @db.Uuid
  shiftId        String?       @db.Uuid
  eventType      TimeEventType
  createdBy      ActorType
  time           DateTime
  geoLat         Float?
  geoLng         Float?
  deviceId       String?       @db.Uuid
  createdAt      DateTime      @default(now())

  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  employee     Employee     @relation(fields: [employeeId], references: [id], onDelete: Cascade)
  shift        Shift?       @relation(fields: [shiftId], references: [id])
  device       Device?      @relation(fields: [deviceId], references: [id])

  @@index([organizationId])
  @@index([employeeId, time])
  @@index([shiftId])
  @@index([organizationId, time])
}

// WorkRules הגלובלי - נשמר לתאימות לאחור (יימחק בעתיד)
model WorkRules {
  id                        Int      @id @default(1)
  dailyStandardHours        Float    @default(8)
  weeklyStandardHours       Float    @default(42)
  overtimeFirstRate         Float    @default(1.25)
  overtimeFirstHoursPerDay  Float    @default(2)
  overtimeSecondRate        Float    @default(1.5)
  maxDailyHours             Float    @default(12)
  createdAt                 DateTime @default(now())
  updatedAt                 DateTime @updatedAt
}

// כללי עבודה לכל ארגון
model OrganizationWorkRules {
  id                        String   @id @default(uuid()) @db.Uuid
  organizationId            String   @unique @db.Uuid
  dailyStandardHours        Float    @default(8)
  weeklyStandardHours       Float    @default(42)
  overtimeFirstRate         Float    @default(1.25)
  overtimeFirstHoursPerDay  Float    @default(2)
  overtimeSecondRate        Float    @default(1.5)
  maxDailyHours             Float    @default(12)
  createdAt                 DateTime @default(now())
  updatedAt                 DateTime @updatedAt

  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
}

model CalendarEvent {
  id            String             @id @default(uuid()) @db.Uuid
  gregorianDate DateTime
  hebrewDate    String?
  eventType     CalendarEventType
  nameHe        String
  nameEn        String?
  isRestDay     Boolean            @default(false)
  isShortDay    Boolean            @default(false)
  createdAt     DateTime           @default(now())

  @@unique([gregorianDate, eventType])
  @@index([gregorianDate])
}

model EmployeeBonus {
  id             String     @id @default(uuid()) @db.Uuid
  organizationId String     @db.Uuid
  employeeId     String     @db.Uuid
  bonusType      BonusType
  amountPerHour  Int?
  amountFixed    Int?
  validFrom      DateTime?
  validTo        DateTime?
  description    String?
  createdAt      DateTime   @default(now())
  updatedAt      DateTime   @updatedAt

  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  employee     Employee     @relation(fields: [employeeId], references: [id], onDelete: Cascade)

  @@index([organizationId])
  @@index([employeeId])
}

// Recurrence types for scheduled tasks
enum RecurrenceType {
  NONE          // One-time task (can be scheduled or immediate)
  DAILY         // Every day
  WEEKLY        // Specific day of week (value = 0-6, Sunday=0)
  BIWEEKLY      // Every two weeks on specific day
  MONTHLY_DATE  // Specific date of month (value = 1-31)
  MONTHLY_DAY   // Specific day of specific week (value = weekday*10 + week, e.g., 21 = Monday of 2nd week)
}

model Task {
  id                     String            @id @default(uuid()) @db.Uuid
  organizationId         String            @db.Uuid
  employeeId             String            @db.Uuid
  title                  String
  description            String?
  status                 TaskStatus        @default(OPEN)
  createdBy              ActorType         @default(MANAGER)
  dueDate                DateTime?
  requiresDocumentUpload Boolean           @default(false)
  attachedDocumentId     String?           @db.Uuid
  employeeNote           String?
  managerNote            String?
  createdAt              DateTime          @default(now())
  completedAt            DateTime?

  // Scheduling fields
  scheduledDate          DateTime?         // When the task becomes visible to employee
  isVisible              Boolean           @default(true)  // False until scheduledDate arrives

  // Recurrence fields (for template tasks)
  recurrenceType         RecurrenceType    @default(NONE)
  recurrenceValue        Int?              // Day of week (0-6), date of month (1-31), etc.
  recurrenceEndDate      DateTime?         // When to stop creating new instances
  isTemplate             Boolean           @default(false) // True if this is a recurring template
  templateId             String?           @db.Uuid        // Links instance to its template
  lastGeneratedDate      DateTime?         // Last date an instance was generated from this template

  organization     Organization      @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  employee         Employee          @relation(fields: [employeeId], references: [id], onDelete: Cascade)
  attachedDocument EmployeeDocument? @relation(fields: [attachedDocumentId], references: [id])
  template         Task?             @relation("TaskTemplate", fields: [templateId], references: [id])
  instances        Task[]            @relation("TaskTemplate")

  @@index([organizationId])
  @@index([employeeId, status])
  @@index([isTemplate, recurrenceType])
  @@index([scheduledDate, isVisible])
  @@index([organizationId, isTemplate, status])
  @@index([employeeId, status, isVisible])
}

model DocumentRequest {
  id                String          @id @default(uuid()) @db.Uuid
  organizationId    String          @db.Uuid
  employeeId        String          @db.Uuid
  title             String
  description       String?
  status            TaskStatus      @default(OPEN)
  dueDate           DateTime?
  createdAt         DateTime        @default(now())
  completedAt       DateTime?
  relatedDocumentId String?         @db.Uuid

  organization    Organization     @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  employee        Employee         @relation(fields: [employeeId], references: [id], onDelete: Cascade)
  relatedDocument EmployeeDocument? @relation(fields: [relatedDocumentId], references: [id])

  @@index([organizationId])
  @@index([employeeId, status])
}

model EmployeeDocument {
  id             String           @id @default(uuid()) @db.Uuid
  organizationId String           @db.Uuid
  employeeId     String           @db.Uuid
  docType        String
  fileUrl        String
  visibility     Visibility       @default(EMPLOYER_ONLY)
  uploadedBy     UploadedBy
  createdAt      DateTime         @default(now())

  organization Organization      @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  employee     Employee          @relation(fields: [employeeId], references: [id], onDelete: Cascade)
  requests     DocumentRequest[]
  tasks        Task[]

  @@index([organizationId])
  @@index([employeeId])
}

model Device {
  id             String      @id @default(uuid()) @db.Uuid
  organizationId String      @db.Uuid
  employeeId     String      @db.Uuid
  platform       Platform
  expoPushToken  String?
  lastSeenAt     DateTime?
  createdAt      DateTime    @default(now())

  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  employee     Employee     @relation(fields: [employeeId], references: [id], onDelete: Cascade)
  timeEvents   TimeEvent[]

  @@index([organizationId])
  @@index([employeeId])
}

model AuditLog {
  id             String    @id @default(uuid()) @db.Uuid
  organizationId String    @db.Uuid
  actorId        String?   @db.Uuid
  actorType      ActorType
  entity         String    // "SHIFT" / "EMPLOYEE" / "BONUS" / etc.
  entityId       String    @db.Uuid
  action         String    // "CREATE" / "UPDATE" / "DELETE"
  before         Json?
  after          Json?
  createdAt      DateTime  @default(now())

  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@index([organizationId])
  @@index([entity, entityId])
  @@index([actorId])
  @@index([createdAt])
}

// בקשת חופשה/מחלה
model LeaveRequest {
  id              String       @id @default(uuid()) @db.Uuid
  organizationId  String       @db.Uuid
  employeeId      String       @db.Uuid
  leaveType       LeaveType
  status          LeaveStatus  @default(PENDING)

  // Requested dates
  startDate       DateTime     @db.Date
  endDate         DateTime     @db.Date
  totalDays       Int          // Total requested days

  // Approval details
  approvedDays    Int?         // For partial approval
  approvedById    String?      @db.Uuid
  approvedAt      DateTime?

  // Notes
  employeeNote    String?      // הערת עובד
  managerNote     String?      // הערת מנהל

  // Document attachment (for sick leave)
  documentUrl     String?      // קישור לאישור מחלה
  documentName    String?      // שם הקובץ

  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt

  organization    Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  employee        Employee     @relation(fields: [employeeId], references: [id], onDelete: Cascade)
  approvedBy      AdminUser?   @relation("ApprovedLeaveRequests", fields: [approvedById], references: [id])

  @@index([organizationId])
  @@index([employeeId, status])
  @@index([startDate, endDate])
}

// רשומת עובד מזדמן (עבור מנהל כוח אדם / קבלן)
model CasualWorkerEntry {
  id              String   @id @default(uuid()) @db.Uuid
  organizationId  String   @db.Uuid
  contractorId    String   @db.Uuid  // מנהל כוח האדם (Employee עם סוג HR_CONTRACTOR)

  workerName      String   // שם העובד המזדמן
  workDate        DateTime @db.Date
  startTime       DateTime
  endTime         DateTime
  durationMinutes Int      // משך בדקות (מחושב בעת יצירה)
  notes           String?

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  organization    Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  contractor      Employee     @relation("ContractorEntries", fields: [contractorId], references: [id], onDelete: Cascade)

  @@index([organizationId])
  @@index([contractorId, workDate])
}
