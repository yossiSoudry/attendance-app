// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_PRISMA_DATABASE_URL")
}



enum EmployeeStatus {
  ACTIVE
  BLOCKED
}

enum ShiftStatus {
  OPEN
  CLOSED
  PENDING_APPROVAL
  CORRECTED
  REJECTED
}

enum TimeEventType {
  CLOCK_IN
  CLOCK_OUT
  CORRECTION_IN
  CORRECTION_OUT
}

enum ActorType {
  EMPLOYEE
  MANAGER
  SYSTEM
}

enum CalendarEventType {
  HOLIDAY
  FAST
  ROSH_CHODESH
  MEMORIAL
  CUSTOM
}

enum BonusType {
  HOURLY
  ONE_TIME
}

enum TaskStatus {
  OPEN
  COMPLETED
  POSTPONED
  CANCELED
}

enum Visibility {
  EMPLOYER_ONLY
  EMPLOYEE_CAN_SEE
}

enum UploadedBy {
  EMPLOYEE
  MANAGER
}

enum WorkTypeRateType {
  BASE_RATE       // שימוש בשכר הבסיסי של העובד
  FIXED           // תעריף קבוע לשעה
  BONUS_PERCENT   // תוספת אחוזים על השכר הבסיסי
  BONUS_FIXED     // תוספת קבועה לשעה
}

enum Platform {
  ANDROID
  IOS
}

enum AdminRole {
  OWNER      // בעל המערכת - יכול להוסיף מנהלים
  ADMIN      // מנהל רגיל - רואה את כל העובדים
  MANAGER    // מנהל מחלקה - רואה רק עובדים במחלקה שלו
}

enum AdminStatus {
  ACTIVE
  INACTIVE
}

model Department {
  id          String   @id @default(uuid()) @db.Uuid
  name        String   @unique
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  admins    AdminUser[]
  employees Employee[]
}

model AdminUser {
  id            String      @id @default(uuid()) @db.Uuid
  email         String      @unique
  password      String?     // hashed password - null if using OAuth only
  name          String
  role          AdminRole   @default(MANAGER)
  status        AdminStatus @default(ACTIVE)
  departmentId  String?     @db.Uuid

  // OAuth fields
  googleId      String?     @unique
  image         String?

  // Invitation fields
  invitedById   String?     @db.Uuid
  invitedAt     DateTime?

  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  department    Department?  @relation(fields: [departmentId], references: [id])
  invitedBy     AdminUser?   @relation("AdminInvitations", fields: [invitedById], references: [id])
  invitees      AdminUser[]  @relation("AdminInvitations")

  // Shifts approved by this admin
  approvedShifts Shift[]    @relation("ApprovedShifts")

  @@index([email])
  @@index([departmentId])
}

model AdminInvitation {
  id          String    @id @default(uuid()) @db.Uuid
  email       String    @unique
  role        AdminRole @default(MANAGER)
  departmentId String?  @db.Uuid
  token       String    @unique
  expiresAt   DateTime
  invitedById String    @db.Uuid
  createdAt   DateTime  @default(now())
  usedAt      DateTime?

  @@index([token])
  @@index([email])
}

model Employee {
  id              String              @id @default(uuid()) @db.Uuid
  fullName        String
  nationalId      String              @unique
  status          EmployeeStatus      @default(ACTIVE)
  baseHourlyRate  Int                 // stored in agorot
  requireLocation Boolean             @default(false)
  departmentId    String?             @db.Uuid
  createdAt       DateTime            @default(now())
  updatedAt       DateTime            @updatedAt

  department       Department?        @relation(fields: [departmentId], references: [id])
  workRates        EmployeeWorkRate[]
  shifts           Shift[]
  timeEvents       TimeEvent[]
  bonuses          EmployeeBonus[]
  tasks            Task[]
  documentRequests DocumentRequest[]
  documents        EmployeeDocument[]
  devices          Device[]

  @@index([departmentId])
}

model WorkType {
  id          String             @id @default(uuid()) @db.Uuid
  name        String
  description String?
  isDefault   Boolean            @default(false)

  // Rate configuration
  rateType    WorkTypeRateType   @default(BASE_RATE)
  rateValue   Int                @default(0)  // agorot for FIXED/BONUS_FIXED, percent*100 for BONUS_PERCENT (e.g., 2500 = 25%)

  createdAt   DateTime           @default(now())
  updatedAt   DateTime           @updatedAt

  employeeRates EmployeeWorkRate[]
  shifts        Shift[]
}

model EmployeeWorkRate {
  id         String   @id @default(uuid()) @db.Uuid
  employeeId String   @db.Uuid
  workTypeId String   @db.Uuid
  hourlyRate Int      // agorot
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  employee Employee @relation(fields: [employeeId], references: [id], onDelete: Cascade)
  workType WorkType @relation(fields: [workTypeId], references: [id], onDelete: Cascade)

  @@unique([employeeId, workTypeId])
}

model Shift {
  id            String        @id @default(uuid()) @db.Uuid
  employeeId    String        @db.Uuid
  workTypeId    String?       @db.Uuid
  startTime     DateTime
  endTime       DateTime?
  status        ShiftStatus   @default(OPEN)
  source        String        @default("web") // "mobile" / "web" / "import"
  isManual      Boolean       @default(false)
  notesEmployee String?
  notesManager  String?
  isRetro       Boolean       @default(false)
  approvedById  String?       @db.Uuid
  approvedAt    DateTime?
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  employee   Employee   @relation(fields: [employeeId], references: [id], onDelete: Cascade)
  workType   WorkType?  @relation(fields: [workTypeId], references: [id])
  approvedBy AdminUser? @relation("ApprovedShifts", fields: [approvedById], references: [id])
  timeEvents TimeEvent[]

  @@index([employeeId, startTime])
}

model TimeEvent {
  id         String        @id @default(uuid()) @db.Uuid
  employeeId String        @db.Uuid
  shiftId    String?       @db.Uuid
  eventType  TimeEventType
  createdBy  ActorType
  time       DateTime
  geoLat     Float?
  geoLng     Float?
  deviceId   String?       @db.Uuid
  createdAt  DateTime      @default(now())

  employee Employee @relation(fields: [employeeId], references: [id], onDelete: Cascade)
  shift    Shift?   @relation(fields: [shiftId], references: [id])
  device   Device?  @relation(fields: [deviceId], references: [id])

  @@index([employeeId, time])
  @@index([shiftId])
}

model WorkRules {
  id                        Int      @id @default(1)
  dailyStandardHours        Float    @default(8)
  weeklyStandardHours       Float    @default(42)
  overtimeFirstRate         Float    @default(1.25)
  overtimeFirstHoursPerDay  Float    @default(2)
  overtimeSecondRate        Float    @default(1.5)
  maxDailyHours             Float    @default(12)
  createdAt                 DateTime @default(now())
  updatedAt                 DateTime @updatedAt
}

model CalendarEvent {
  id            String             @id @default(uuid()) @db.Uuid
  gregorianDate DateTime
  hebrewDate    String?
  eventType     CalendarEventType
  nameHe        String
  nameEn        String?
  isRestDay     Boolean            @default(false)
  isShortDay    Boolean            @default(false)
  createdAt     DateTime           @default(now())

  @@unique([gregorianDate, eventType])
  @@index([gregorianDate])
}

model EmployeeBonus {
  id            String     @id @default(uuid()) @db.Uuid
  employeeId    String     @db.Uuid
  bonusType     BonusType
  amountPerHour Int?
  amountFixed   Int?
  validFrom     DateTime?
  validTo       DateTime?
  description   String?
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt

  employee Employee @relation(fields: [employeeId], references: [id], onDelete: Cascade)

  @@index([employeeId])
}

model Task {
  id                     String      @id @default(uuid()) @db.Uuid
  employeeId             String      @db.Uuid
  title                  String
  description            String?
  status                 TaskStatus  @default(OPEN)
  createdBy              ActorType   @default(MANAGER)
  dueDate                DateTime?
  requiresDocumentUpload Boolean     @default(false)
  employeeNote           String?
  managerNote            String?
  createdAt              DateTime    @default(now())
  completedAt            DateTime?

  employee Employee @relation(fields: [employeeId], references: [id], onDelete: Cascade)

  @@index([employeeId, status])
}

model DocumentRequest {
  id                String          @id @default(uuid()) @db.Uuid
  employeeId        String          @db.Uuid
  title             String
  description       String?
  status            TaskStatus      @default(OPEN)
  dueDate           DateTime?
  createdAt         DateTime        @default(now())
  completedAt       DateTime?
  relatedDocumentId String?         @db.Uuid

  employee        Employee         @relation(fields: [employeeId], references: [id], onDelete: Cascade)
  relatedDocument EmployeeDocument? @relation(fields: [relatedDocumentId], references: [id])

  @@index([employeeId, status])
}

model EmployeeDocument {
  id         String           @id @default(uuid()) @db.Uuid
  employeeId String           @db.Uuid
  docType    String
  fileUrl    String
  visibility Visibility       @default(EMPLOYER_ONLY)
  uploadedBy UploadedBy
  createdAt  DateTime         @default(now())

  employee Employee         @relation(fields: [employeeId], references: [id], onDelete: Cascade)
  requests DocumentRequest[]

  @@index([employeeId])
}

model Device {
  id            String      @id @default(uuid()) @db.Uuid
  employeeId    String      @db.Uuid
  platform      Platform
  expoPushToken String?
  lastSeenAt    DateTime?
  createdAt     DateTime    @default(now())

  employee   Employee   @relation(fields: [employeeId], references: [id], onDelete: Cascade)
  timeEvents TimeEvent[]

  @@index([employeeId])
}

model AuditLog {
  id        String   @id @default(uuid()) @db.Uuid
  actorId   String?  @db.Uuid
  actorType ActorType
  entity    String   // "SHIFT" / "EMPLOYEE" / "BONUS" / etc.
  entityId  String   @db.Uuid
  action    String   // "CREATE" / "UPDATE" / "DELETE"
  before    Json?
  after     Json?
  createdAt DateTime @default(now())

  @@index([entity, entityId])
  @@index([actorId])
  @@index([createdAt])
}
